@using OpenRpg.Editor.Infrastructure.Helpers
@using OpenRpg.Quests

<ListEditor Data="Objectives" TItem="Objective">
    <HeaderTemplate>
        <th>Objective Type</th>
        <th>Associated Id</th>
        <th>Associated Value</th>
    </HeaderTemplate>
    <RowTemplate>
        <td>
            <div class="control">
                <div class="select is-fullwidth">
                    <select bind="@context.ObjectiveType">
                        @foreach (var objectiveType in TypesHelper.GetObjectiveTypes)
                        {
                            <option value=@objectiveType.Id>@objectiveType.Name</option>
                        }
                    </select>
                </div>
            </div>
        </td>
        <td>
            <div class="control">
                <input class="input" type="text" bind="@context.AssociatedId" />
            </div>
        </td>
        <td>
            <div class="control">
                <input class="input" type="text" bind="@context.AssociatedValue" />
            </div>
        </td>
    </RowTemplate>
</ListEditor>

@functions {
    [Parameter]
    public List<Objective> Objectives { get; set; }
}

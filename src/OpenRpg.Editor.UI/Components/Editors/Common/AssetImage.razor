@using OpenRpg.Editor.Core.Extensions
@using OpenRpg.Editor.Core.Models

@inject EditorState EditorState;

<figure class="image is-128x128 pixilize is-margin-auto is-rounded has-background-grey-dark p-md @(CustomClasses)">
    <img src="@(EditorState.CurrentProject.GetImageAssetAsDataUrl(AssetType, AssetCode, "png"))" />
</figure>

@code {
    [Parameter]
    public string AssetType { get; set; }
    
    [Parameter]
    public string AssetCode { get; set; }

    [Parameter] 
    public string CustomClasses { get; set; } = "";

}
@using OpenRpg.Editor.Infrastructure.Helpers
@using OpenRpg.Items.TradeSkills.Templates

<div class="field is-horizontal">
    <div class="field-label">
        <label class="label">Skill Type</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <div class="select is-fullwidth">
                    <select @bind="TradeSkillData.SkillType">
                        @{ var gatheringTypes = IsGatheringSkill ? TypesHelper.GetGatheringSkillTypes : TypesHelper.GetCraftingSkillTypes; }
                        @foreach (var tradeSkillType in gatheringTypes)
                        {
                            <option value="@tradeSkillType.Id">@tradeSkillType.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="field is-horizontal">
    <div class="field-label">
        <label class="label">Skill Difficulty</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" placeholder="i.e 25"
                       @bind="@TradeSkillData.SkillDifficulty" />
            </div>
        </div>
    </div>
</div>
<div class="field is-horizontal">
    <div class="field-label">
        <label class="label">Time To Complete</label>
    </div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <input class="input" type="text" placeholder="i.e 1.5 seconds"
                       @bind="@TradeSkillData.TimeToComplete" />
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ITradeSkillData TradeSkillData { get; set; }
    
    [Parameter]
    public bool IsGatheringSkill { get; set; }
}
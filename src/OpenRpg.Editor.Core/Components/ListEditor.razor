@typeparam TItem

<CollectionEditor TItem="TItem" 
                  Data="Data" OnAdded="OnAdded" OnRemoved="OnRemoved" ShowNoCount="ShowNoCount" 
                  HeaderTemplate="HeaderTemplate" RowTemplate="RowTemplate" 
                  NestedRowTemplate="NestedRowTemplate" ButtonOverrideTemplate="ButtonOverrideTemplate" />

@functions {
    [Parameter] public RenderFragment HeaderTemplate { get; set; }
    [Parameter] public RenderFragment<EventCallback<TItem>> ButtonOverrideTemplate { get; set; }
    [Parameter] public RenderFragment<TItem> RowTemplate { get; set; }
    [Parameter] public RenderFragment<TItem> NestedRowTemplate { get; set; }
    [Parameter] public List<TItem> Data { get; set; }
    [Parameter] public bool ShowNoCount { get; set; } = true;

    public void OnAdded(TItem added) => Data.Add(added);
    public void OnRemoved(TItem removed) => Data.Remove(removed);
}
